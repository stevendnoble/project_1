<!DOCTYPE html>
<html lang='en'>
<head>
{{> headCDN}}
{{> mapbox}}
  <title>Events</title>
</head>
<body>
  {{> navPartial}}
  {{> carousel}}
  <!-- will have the search here -->
<br>
<br>
<section class="remove-nav"> 
  <h1 id="scroll-here" class='text-center' style='font-weight: 100; letter-spacing: 1px;'>What are you looking for?</h1>
  <br>
  <div class="row center-form">
    <div class="col-md-12">
      <form class='form-pad submit-search'>
        <div class='form-group' style='float: left; width: 25%;'>
          <select class='form-control category_input' style='font-weight:100; letter-spacing: 3px'>
            <option value="Music">Music</option>
            <option value="Nightlife">Nightlife</option>
            <option value="Food">Food</option>
            <option value="Networking">Networking</option>
            <option value="Sports">Sports</option>
            <option value="Sports">Sports</option>
            <option value="Outdoors">Outdoors</option>
            <option value="Fundraisers">Fundraisers</option>
          </select>
          <!-- <input type="text" class='form-control category_input' name='category_search' placeholder='Search Event'> -->
        </div>
        <div class='form-group date_input'  style='float: left; width: 25%;'>
          <select class='form-control date_selection' style='font-weight:100; letter-spacing: 3px'>
            <option value="All">All dates</option>
            <option value="Today">Today</option>
            <option value="ThisWek">This week</option>
            <option value="ThisMonth">This month</option>
          </select>
        </div>
        <div class='form-group' style='float: left;width: 25%; '>
          <input type="text" class='form-control location_input' name='location_search' placeholder='Enter City' style='font-weight:100; letter-spacing: 3px' >
        </div>
        <div class='form-group' style='float: left; width: 15%;'>
          <input type="submit" class='form-control' value='Search' style="background-color:#FF4E59; color:white; font-weight:100; letter-spacing: 3px">
        </div>
      </form>
    </div>
  </div>
</section>


  <div class="container" id="map-sticky">
      <div id='map'></div> 
    <div id="events-list">
      <script type='text/x-handlebars-template' id='event-template'>
      \{{#grouped_each 2 events}}
        <div class="row">
          \{{#each this}}
        <div class="col-md-3">
          <div class="thumbnail floathis">
            \{{#if image.medium.url }}
              <img src="\{{image.medium.url}}" alt='default-img' class='img-responsive'>
            \{{else}}
              <img src="/photos/defaultImg.jpg" alt='default-img' class='img-responsive'>
            \{{/if}}
            <hr>
            <h3>\{{dotdot title}}</h3>
            <p><span class='makeRed'>When: </span>\{{dateFormat start_time}}</p>
            <p><span class='makeRed'>Where: </span>\{{venue_name}}</p>
            <hr>
            <p><a href="\{{url}}" class="btn btn-sm btn-primary">More Info</a>
            <a href="#" class="btn btn-sm btn-success  fav-event" id="\{{id}}">Save</a></p>
          </div>
        </div>
      \{{/each}}
      </div>
      \{{/grouped_each}} 
      </script>
      </div>
  </div>

{{> footer}}
{{> endCDN}}

</body>
</html>